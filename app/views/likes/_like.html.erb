<div class="like">
  <% if like = current_user && current_user.liked(bookmark.id) %>
    <%= link_to [bookmark.topic, bookmark, like], class: 'btn btn-danger', method: :delete, remote: true do %>
      <i class="glyphicon glyphicon-star-empty"> </i>&nbsp; Unlike
    <% end %>
  <% else %>
    <%= link_to [bookmark.topic, bookmark, Like.new], class: 'btn btn-primary', method: :post, remote: true do %>
      <i class="glyphicon glyphicon-star"> </i>&nbsp; Like
    <% end %>
  <% end if policy(Like.new).create? %>
</div>
