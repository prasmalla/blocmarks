<div class="row" id="bookmark_<%= @bookmark.id %>">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h5 class="media-heading">
          <%= link_to @bookmark.url, target: '_blank' do %>
            <%= cl_image_tag(@bookmark.url, sign_url: true, type: "url2png", width: '280', class: 'center-block') %>
            <span class="center-block text-center"><%= @bookmark.url %></span>
          <% end %>
          <% if policy(@bookmark).edit? %>
            <small>
              <%= link_to edit_topic_bookmark_path, class: 'btn btn-default pull-right' do %>
                <i class="glyphicon glyphicon-edit"></i> Edit
              <% end %>
              <%= link_to [@bookmark.topic, @bookmark], method: :delete, class: 'btn btn-default pull-right', data: { confirm: 'Are you sure you want to delete this bookmark?' } do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </small>
          <% end %>
        </h5>
        <%= render partial: 'likes/like', locals: { bookmark: @bookmark } %>
      </div>
    </div>
  </div>
</div>
