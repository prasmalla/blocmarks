<div class="row">
  <div class="col-md-8">
    <div class="media">
      <div class="media-body">
        <h2 class="media-heading">
          <%= @topic.title %>
          <% if policy(@topic).edit? %>
            <small>
              <%= link_to edit_topic_path, class: 'btn btn-default pull-right' do %>
                <i class="glyphicon glyphicon-edit"></i> Edit
              <% end %>
              <%= link_to @topic, method: :delete, class: 'btn btn-default pull-right', data: { confirm: 'Are you sure you want to delete this topic?' } do %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end %>
            </small>
          <% end %>
        </h2>
        <% if policy(Bookmark.new).create? %>
          <%= link_to new_topic_bookmark_path(@topic), class: 'btn btn-default' do %>
            <i class="glyphicon glyphicon-plus"></i> Add Bookmark
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <%= render @topic.bookmarks %>
</div>
